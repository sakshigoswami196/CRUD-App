<%- include('./base/header.ejs') %>

<div class="container">
    <div class="alert bg-success mt-3">
        <h4 class="text-center">Update Your Record</h4>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="">
            <form action="/update/<%= record._id %>" method="post">
                <div class="field my-3" >
                    <label for="" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" value="<%= record.name %>" placeholder="Enter your name">
                </div>
                <div class="field my-3">
                    <label for=""class="form-label">city</label>
                    <input type="text"class="form-control" name="city" value="<%= record.city %>" placeholder="Enter city">
                </div>
                
                <div class="field my-3" >
                    <label for=""class="form-label">email</label>
                    <input type="text" class="form-control" name="email"  value="<%= record.email %>"placeholder="Enter your email">
                </div>
                <div class="field my-3">
                    <label for=""class="form-label">contact</label>
                    <input type="text"class="form-control" name="contact" value="<%= record.contact %>" placeholder="Enter Phone number">
                </div>

                <input type="submit" value="create" class="btn btn-warning w-100 mt-3" >
            </form>
        </div>

        <div class="col"></div>
    </div>
</div>


<%- include('./base/footer.ejs') %>